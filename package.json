{
  "name": "@codeonlyjs/core",
  "version": "0.1.102",
  "description": "A simple, lightweight, code-only front-end Web framework.",
  "main": "./index-client.js",
  "module": "./index-client.js",
  "types": "./index.d.ts",
  "type": "module",
  "exports": {
    "import": {
      "types": "./index.d.ts",
      "browser": "./index-client.js",
      "default": "./index-server.js"
    }
  },
  "scripts": {
    "test": "node --test",
    "rollup": "rollup -c rollup-core.config.mjs && rollup -c rollup-spa.config.mjs",
    "types": "tsc --project tsconfig.emit.json && dts-tool flatten @codeonlyjs/core index.raw.d.ts types.d.ts --module:index-server --module:types --out:index.d.ts && dts-tool extract index.d.ts --out:index.d.json",
    "build": "zx build.js",
    "docs": "npm run types && node make-docs.js"
  },
  "author": "Topten Software",
  "contributors": [
    {
      "name": "Brad Robinson",
      "email": "contact@toptensoftware.com"
    }
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/codeonlyjs/core.git"
  },
  "license": "Apache-2.0",
  "devDependencies": {
    "@codeonlyjs/dts-tool": "github:codeonlyjs/dts-tool",
    "@rollup/plugin-replace": "^6.0.1",
    "@rollup/plugin-terser": "^0.4.4",
    "@toptensoftware/jsdoc": "github:toptensoftware/jsdoc",
    "rollup": "^4.24.3",
    "rollup-plugin-bundle-size": "^1.0.3",
    "typedoc": "^0.27.3",
    "typedoc-plugin-markdown": "^4.3.1",
    "typescript": "^5.7.2",
    "zx": "^8.2.0"
  }
}
