{
  "name": "@codeonlyjs/core",
  "version": "0.1.97",
  "description": "A simple, lightweight, code-only front-end Web framework.",
  "main": "./index.js",
  "types": "./index.d.ts",
  "type": "module",
  "exports": {
    "node": {
      "import": {
        "types": "./index.d.ts",
        "default": "./index.js"
      }
    },
    "default": {
      "import": "./index-spa.js"
    }
  },
  "scripts": {
    "test": "node --test",
    "rollup": "rollup -c rollup-core.config.mjs && rollup -c rollup-spa.config.mjs",
    "types": "tsc --project tsconfig.emit.json && dts-tool demod index.d.ts @codeonlyjs/core --strip-internal",
    "build": "zx build.js"
  },
  "author": "Topten Software",
  "contributors": [
    {
      "name": "Brad Robinson",
      "email": "contact@toptensoftware.com"
    }
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/codeonlyjs/core.git"
  },
  "license": "Apache-2.0",
  "devDependencies": {
    "@rollup/plugin-replace": "^6.0.1",
    "@rollup/plugin-terser": "^0.4.4",
    "rollup": "^4.24.3",
    "rollup-plugin-bundle-size": "^1.0.3",
    "typescript": "^5.7.2",
    "zx": "^8.2.0"
  },
  "dependencies": {
    "@codeonlyjs/dts-tool": "github:codeonlyjs/dts-tool"
  }
}
